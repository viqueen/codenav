#!/usr/bin/env bash

_with_arguments() {
    count=${1}
    shift
    if [[ "$#" -lt ${count} ]]; then
        echo "missing arguments, expected at least ${count} but received $#"
        exit 1
    fi
}

function register() {
    _with_arguments 1 $@
    username=${1}; shift

    # TODO : handle paging
    items=(
        $(
            curl -s -X GET https://api.github.com/users/${username}/repos \
                | jq -r '.[].ssh_url'
        )
    )

    for item in ${items[@]};
    do
        cnav register ${item}
    done
}

eval $@